.modal-backdrop
  background-color #fafafa
  &.in
    opacity 0.91
.modal
  text-align center
  padding 0!important
  font-family 'San francisko',sans-serif

  &:before
    content ''
    display inline-block
    height 100%
    vertical-align middle
    margin-right -4px

.modal-dialog
  display inline-block
  text-align left
  vertical-align middle
  font-family 'San francisko',sans-serif

.modal-content
  background-color white
  border 1px solid rgba(0, 0, 0, 0.04)
  box-shadow 0 4px 20px rgba(0, 0, 0, 0.12)
  border-radius 0

.modal-header
  max-height 70px
  background-color #efefef
  border-bottom 1px solid #ece4e8
  position relative
  font-family 'San francisko',sans-serif

  .close
    position absolute
    right -50px
    width 36px
    height 36px
    opacity 1
    top -50px

    svg
      transition all .1s ease

    &:hover
      svg
        path, rect, polygon
          fill lighten($text-pink, 8)


.modal-body
  padding 0

.modal-body-subheader
  color $text-pink
  height 70px
  line-height 70px
  border-bottom 1px solid #ece4e8
  text-align center
  text-transform uppercase
  font-size 13px
  font-weight 700


.modal-title
  color #333
  font-size 13px
  font-weight 700
  line-height 46px
  text-transform uppercase

.modal-footer
  height 100px
  display flex
  padding 15px 30px
  justify-content flex-start
  align-items center
  font-family 'San francisko',sans-serif
  &--btn
    max-height 40px

.photo-upload-dialog
  width 842px

.modal-photo-gallery
  display flex
  flex-direction row
  flex-wrap wrap
  max-height: 320px
  overflow: auto
  padding 30px 30px 0

  &--item
    display flex
    flex 1 1 134px
    margin auto
    max-width 134px
    max-height 134px
    height 134px
    margin-bottom 30px
    cursor pointer
    background-color #eaeaea
    &:hover
      >img
        opacity 0.8
    > img
      transition all .1s ease
      max-width 100%
      height auto

.modal-fleaMarket
  padding 30px 30px 0
  max-height 490px
  overflow auto

  .modal-fleaMarket-head
    background-color #efefef
    border-bottom 1px solid #ece4e8
    position relative
    color #333
    font-size 13px
    font-weight 700
    margin 0 -30px
    padding 27px 30px 24px
    font-family 'San francisko',sans-serif
    text-transform uppercase

  .head-search
    padding 17px 30px 10px
    border-bottom solid 1px #ece4e8
    margin 0 -30px 30px

    .head-search-icon
      width 46px

    .input-wrapper
      width 100%

    .input-group
      width 100%
  .checkbox-row
    margin-bottom 30px

.modal-gallery-item
  position relative

.gallery-checkbox
  width 40px
  height 40px
  position absolute
  bottom 16px
  right 16px
  label
    width 40px
    height 40px
    cursor pointer
    position absolute
    top 0
    left 0
    background transparent
    border 2px solid #d4d4d4
    border-radius 50%
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.35);
    &:after
      content ''
      background-image url('/img/galery-checkbox-checked.png')
      width 21px
      height 21px
      background-repeat no-repeat
      position absolute
      top 9px
      left 7px
      opacity 0
    &:hover
      border-color #b6b6b6
    &:hover:after
      opacity 0

  .checkbox
    visibility hidden
    &:checked + label
      background $pink
      border-color $pink
      box-shadow 0 1px 1px $pink
    &:checked + label:after
      opacity 1

